#include <stdio.h>

int main (void){
    char temp[50];
    int i=0;
    char j=0;
    float sum=0.0;
    while (i!=50){
        printf("Coloque a temperatura: ");
        scanf("%hhd", &temp[i]);
        sum=sum+temp[i];         
        i=i+1;
    }
    i=0;
    while (i!=50){        
        if (temp[i]>sum/50.00){
            j=j+1;
        }
        i=i+1;
    }
    printf("%d Temperaturas acima da mÃ©dia.", j);
    return 0;
}
